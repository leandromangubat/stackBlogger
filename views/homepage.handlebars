<main class="container mt-5">
  <h1 class="mb-4 text-white">Stack Blog Posts</h1>
  <div>
    {{#each posts}}
      <div class="post-block">
        <div class="card mb-3 bg-dark opacity-80">
          <div class="card-header">
            <h2 class="card-title p-2">
              <a
                href="/post/{{id}}"
                class="p-2 rounded text-white"
              >{{title}}</a>
            </h2>
          </div>
          <div class="card-body opacity-75 rounded">
            <p>Author:
              {{user.username}}
              <br />
              Date:
              {{format_date createdAt}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</main>